<div class="user-post mt-8 border-2 border-blue-gray">
  <div class="title flex justify-between mb-2">
    <h3><%= post.title %> by <%= post.users.name %></h3>
    <aside class="text-right mr-2">
      <span>Comments: <%= post.comments_counter %></span>
      <span>Likes: <%= post.likes_counter %></span>
    <aside>
          <%if can? :destroy, post %>
              <%= button_to "Delete Post", user_post_path(@user, @post), class: "button button-gradient button-secondary", method: :delete, params: { id: post.id} %>
    <%end%>
  </div>
  <p><%= post.text %></p>
</div>