<%= link_to "This is user posts", user_posts_path(1) %>
<div>This page will show a Single User's posts and show posts comments</div>

<h1>Posts#index</h1>
<%= render "users/user", user: @user %>

<% @posts.each do | post | %>
  <%= link_to user_post_path(@user, post) do %>
    <%= render "post", post: post %>

    <div class="user-post-comments mt-2">
      <h3 class="text-xl">
      <span class="underline decoration-wavy decoration-slate-500">Comments</span>
      <span>for Post: </span>
      <span class="text-blue-gray-600 underline decoration-red-400"><%="#{post.title}"%> </span>
      </h3>
      
      <% post.recent_comments.each do |comment| %>
        <div class="post-comment">
          <p>
            <span><strong><%= comment.users.name %>:</strong></span>
            <span><%= comment.text %></span>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %> 