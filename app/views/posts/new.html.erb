<% content_for :title, "New Post" %>
<h1 class="text-xl ml-7">New Post</h1>
<%= form_with model: :post, url: user_posts_path, scope: :post ,class: "w-6/12 m-6" do |form|  %>
  <div class="input-group input-group-outline mb-4">
    <%= form.text_field :title, placeholder: "Post title", class: "form-control" %>
  </div>
  <div class="input-group input-group-outline mb-6 bg-blue-gray-50">
    <%= form.text_area :text, placeholder: "Your Post text", class: "form-control", rows: "7" %>
  </div>
  <div>
    <%= form.button "Create Post", type: "submit", class: "button button-gradient button-secondary", 'data-ripple-light': true %>
  </div>
<% end %>